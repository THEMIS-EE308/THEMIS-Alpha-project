.conBtn {
  display: flex;
  justify-content: center;
  align-items: center;
}
.header {
  display: flex;
}
.title {
  color: #303133;
  font-weight: bold;
  padding: 20rpx;
  font-size: 30rpx;
}
.price {
  color: #FF7670;
  padding: 10rpx;
  font-size: 30rpx;
}
.info-fa {
  display: flex;
  align-items: center;
}
.fa-left {
  width: 1px;
  height: 12px;
  border-left: 3px solid #FF7670;
  margin-left: 10px;
}
.goodsInfo {
  padding: 5px;
  color: #F3AF28;
}
.info {
  display: flex;
  align-items: center;
  background-color: #FFF;
  margin-bottom: 10px;
  padding: 0px 20px;
}
.useinfo {
  display: flex;
  flex-direction: column;
  margin-left: 20px;
  margin-bottom: 60px;
}
.navigation {
  display: flex;
  margin-top: 100rpx;
  border: solid 2rpx #f2f2f2;
  background-color: #ffffff;
  padding: 16rpx 0;
  position: fixed;
  width: 100%;
  bottom: 0;
}
.navigation .left {
  display: flex;
  font-size: 20rpx;
}
.navigation .left .item {
  margin: 0 30rpx;
}
.navigation .left .item.car {
  text-align: center;
  position: relative;
}
.navigation .left .item.car .car-num {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
}
.navigation .right {
  display: flex;
  font-size: 28rpx;
  align-items: center;
}
.navigation .right .btn {
  line-height: 66rpx;
  padding: 0 30rpx;
  border-radius: 36rpx;
  color: #ffffff;
}
.navigation .right .cart {
  background-color: #FF7670;
  margin-right: 30rpx;
}
.navigation .right .buy {
  background-color: #F3AF28;
}